<Window x:Class="CommsModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Коммуникационная система" Height="700" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" x:Name="StatusText">Инициализация...</TextBlock>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="NodesList" Grid.Column="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="X" Width="50" DisplayMemberBinding="{Binding X}"/>
                        <GridViewColumn Header="Y" Width="50" DisplayMemberBinding="{Binding Y}"/>
                        <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding TowerType}"/>
                        <GridViewColumn Header="Радиус" Width="80" DisplayMemberBinding="{Binding Range, StringFormat=F1}"/>
                        <GridViewColumn Header="Нагрузка(%)" Width="100" DisplayMemberBinding="{Binding LoadPercent}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <TextBlock FontWeight="Bold" Text="Сводка" Margin="0,0,0,8"/>
                <TextBlock x:Name="AvgCellularCoverage" Text="Средняя сотовая связь: 0%" Margin="0,0,4,8"/>
                <TextBlock x:Name="AvgInternetCoverage" Text="Средний интернет: 0%" Margin="0,0,4,8"/>
                <TextBlock x:Name="AvgLatency" Text="Средняя задержка: 0 мс" Margin="0,0,0,8"/>
                <TextBlock x:Name="NoCoverageText" Text="Без покрытия: 0 ячеек" Margin="0,0,0,8"/>
                <TextBlock x:Name="OverloadedText" Text="Перегруженных вышек: 0" Margin="0,0,0,8"/>
                <Separator Margin="0,8"/>
                <TextBlock FontWeight="Bold" Text="Статусы покрытия" Margin="0,8,0,4"/>
                <TextBlock Text="• Нет покрытия: &lt; 30%" FontSize="10" Margin="0,2"/>
                <TextBlock Text="• Плохое: 30-60%" FontSize="10" Margin="0,2"/>
                <TextBlock Text="• Медленное: Высокая задержка" FontSize="10" Margin="0,2"/>
                <TextBlock Text="• Хорошее: Оптимальное" FontSize="10" Margin="0,2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
