<Window x:Class="GigaCity_Labor3_OOP.FinancialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Финансовая система города" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#2F2F2F" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Финансовая система города" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Финансовая статистика -->
        <Border Grid.Row="1" Background="#404040" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Добавим новые элементы для отображения расходов бюджета -->
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Выплачено зарплат" FontWeight="Bold" Foreground="LightYellow" FontSize="14"/>
                    <TextBlock Text="{Binding TotalSalariesPaid}" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Выплачено субсидий" FontWeight="Bold" Foreground="LightPink" FontSize="14"/>
                    <TextBlock Text="{Binding TotalSubsidiesPaid}" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Городской бюджет" FontWeight="Bold" Foreground="LightGreen" FontSize="14"/>
                    <TextBlock Text="{Binding CityBudget}" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="НДФЛ собрано" FontWeight="Bold" Foreground="LightBlue" FontSize="14"/>
                    <TextBlock Text="{Binding TotalIncomeTaxCollected}" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Налог на прибыль" FontWeight="Bold" Foreground="LightCoral" FontSize="14"/>
                    <TextBlock Text="{Binding TotalCorporateTaxCollected}" FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- История транзакций -->
        <Border Grid.Row="2" Background="#404040" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Text="История транзакций" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding TransactionHistory}" 
                         Background="#505050" 
                         BorderThickness="0"
                         Foreground="White"
                         FontFamily="Consolas"
                         FontSize="11"
                         Height="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Закрыть" 
                    Click="CloseButton_Click"
                    Background="#7F4F4F" 
                    Foreground="White"
                    BorderBrush="#9F5F5F"
                    Padding="15,8"
                    FontSize="12"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>