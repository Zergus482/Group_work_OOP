<Window x:Class="GigaCity_Labor3_OOP.IndustriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Промышленность города" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#2F2F2F" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Промышленность города" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Финансовая статистика отраслей -->
        <Border Grid.Row="1" Background="#404040" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Сельское хозяйство" FontWeight="Bold" Foreground="LightGreen" FontSize="14"/>
                    <TextBlock Text="{Binding Industries.AgricultureProfit, StringFormat={}{0:C}}" 
                               FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Industries.TotalAgricultureRevenue, StringFormat='Доход: {0:C}'}" 
                               FontSize="11" Foreground="LightGray"/>
                    <TextBlock Text="{Binding Industries.TotalAgricultureCosts, StringFormat='Расход: {0:C}'}" 
                               FontSize="11" Foreground="LightGray"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Химическая промышленность" FontWeight="Bold" Foreground="LightBlue" FontSize="14"/>
                    <TextBlock Text="{Binding Industries.ChemicalProfit, StringFormat={}{0:C}}" 
                               FontSize="16" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Industries.TotalChemicalRevenue, StringFormat='Доход: {0:C}'}" 
                               FontSize="11" Foreground="LightGray"/>
                    <TextBlock Text="{Binding Industries.TotalChemicalCosts, StringFormat='Расход: {0:C}'}" 
                               FontSize="11" Foreground="LightGray"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Общая прибыль" FontWeight="Bold" Foreground="Gold" FontSize="14"/>
                    <TextBlock Text="{Binding Industries.TotalIndustryProfit, StringFormat={}{0:C}}" 
                               FontSize="18" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Статистика" FontWeight="Bold" Foreground="White" FontSize="14"/>
                    <TextBlock Text="{Binding Industries.Farms.Count, StringFormat='Ферм: {0}'}" 
                               FontSize="11" Foreground="LightGreen"/>
                    <TextBlock Text="{Binding Industries.ChemicalPlants.Count, StringFormat='Заводов: {0}'}" 
                               FontSize="11" Foreground="LightBlue" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Списки ферм и заводов -->
        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фермы -->
            <Border Grid.Column="0" Background="#404040" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="10">
                <StackPanel>
                    <TextBlock Text="Сельскохозяйственные фермы" FontWeight="Bold" FontSize="16" Foreground="LightGreen" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding Industries.Farms}" 
                             Background="#505050" 
                             BorderThickness="0"
                             Foreground="White"
                             Height="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3A5F3A" CornerRadius="3" Padding="8" Margin="2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding Type}" FontSize="11" Foreground="LightGreen"/>
                                        <TextBlock Text="{Binding Area, StringFormat='Площадь: {0} га'}" FontSize="10" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding Efficiency, StringFormat='Эффективность: {0:P0}'}" FontSize="10" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding Budget, StringFormat='Бюджет: {0:C}'}" FontSize="10" Foreground="LightGray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Химические заводы -->
            <Border Grid.Column="2" Background="#404040" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Padding="10">
                <StackPanel>
                    <TextBlock Text="Химические заводы" FontWeight="Bold" FontSize="16" Foreground="LightBlue" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding Industries.ChemicalPlants}" 
                             Background="#505050" 
                             BorderThickness="0"
                             Foreground="White"
                             Height="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3A3A5F" CornerRadius="3" Padding="8" Margin="2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding MainProductType}" FontSize="11" Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding ProductionCapacity, StringFormat='Мощность: {0} т/день'}" FontSize="10" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding SafetyLevel, StringFormat='Безопасность: {0:P0}'}" FontSize="10" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding Budget, StringFormat='Бюджет: {0:C}'}" FontSize="10" Foreground="LightGray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Создать ферму" 
                    Background="#3F7F3F" 
                    Foreground="White"
                    BorderBrush="#4F8F4F"
                    Padding="15,8"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="0,0,10,0"/>

            <Button Content="Создать завод" 
                    Background="#3F3F7F" 
                    Foreground="White"
                    BorderBrush="#4F4F8F"
                    Padding="15,8"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="10,0,0,0"/>

            <Button Content="Закрыть" 
                    Click="CloseButton_Click"
                    Background="#7F4F4F" 
                    Foreground="White"
                    BorderBrush="#9F5F5F"
                    Padding="15,8"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>