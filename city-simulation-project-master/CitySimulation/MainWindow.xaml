<Window x:Class="CitySimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:foreign="clr-namespace:CitySimulation.Views.ForeignRelations"
        xmlns:emergency="clr-namespace:CitySimulation.Views.EmergencyService"
        Title="City Simulation - Внешние связи и Пожарные службы" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TabControl>
            <TabItem Header="Внешние связи">
                <foreign:ForeignRelationsView/>
            </TabItem>
            <TabItem Header="Пожарные службы">
                <emergency:EmergencyServiceView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>