<Window x:Class="CommsModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Communications Model" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Width="140" Margin="0,0,8,0" Click="Simulate_Click">Simulate</Button>
            <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" x:Name="StatusText">Idle</TextBlock>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="NodesList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="X" Width="50" DisplayMemberBinding="{Binding X}"/>
                    <GridViewColumn Header="Y" Width="50" DisplayMemberBinding="{Binding Y}"/>
                    <GridViewColumn Header="Coverage" Width="120" DisplayMemberBinding="{Binding Coverage}"/>
                    <GridViewColumn Header="Latency(ms)" Width="120" DisplayMemberBinding="{Binding Latency}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
